<h1>Burgers</h1>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <p>ID: {{this.burger_name}}
	<button class="devour" data-id="{{id}}" data-newDevour="{{devour}}">
		Devour
	</button>

    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burgers}}
    {{#if devoured}}
     {{this.burger_name}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ba">Burger Name</label>
    <input type="text" id="ba" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>

