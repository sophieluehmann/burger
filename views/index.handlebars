<div class="container">
  <div class="row">
  <div class="col-4"></div>
  <div class="col-4">
    <h1>Eat-Da-Burger</h1>
  </div>
  <div class="col-4"></div>
  </div>
</div>

<div class="container">
  <div class="row">
  <div class="col-4"></div>
  <div class="col-4" id="img">
    <img src="/assets/img/Krabby_Patty_transparentpng.png" alt="Burger">
  </div>
  <div class="col-4"></div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-6">
      <h3>Burgers</h3>
      <ul>
        {{#each burgers}}
        {{#unless this.devoured}}
        <div class="row" id="burger">
          <div id="not-devoured">
          {{this.burger_name}}
        </div>
          <form action="api/burgers/{{this.id}}?_method=PUT" method="POST">
            <button type="submit" class='burgerAvailable'>Devour</button>
          </form>
          <form action="api/burgers/{{this.id}}?_method=DELETE" method="POST">
            <button type="submit" class="delete-burger" data-id="{{this.id}}">X</button>
          </form>
        </div>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
  
    <div class="col-6">
      <h3>Devoured</h3>
      <ul>
      {{#each burgers}}
      {{#if devoured}}
        <div class="row" id="eaten">
          {{this.burger_name}}
          <form action="api/burgers/{{this.id}}?_method=DELETE" method="POST">
            <button type="submit" class="delete-burger" data-id="{{this.id}}">X</button>
          </form>
        </div>
      {{/if}}
      {{/each}}
      </ul>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h2>Add a Burger</h2>
       <form action="/api/burgers" method="POST">
        <input type="text" id="name" name="burger_name">
        <button type="submit" class="addBurgerButton">Add Burger</button>
      </form>
    </div>
  </div>
</div>
