
<div class="container">
  <div class="col-12">
    <div class="row">
      <h1>Eat-Da-Burger</h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-4">
      <ul>
        {{#each burgers}}
        {{#unless this.devoured}}
        <div class="row">
          <form action="api/burgers/{{this.id}}?_method=PUT" method="POST">
            <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
          </form>
        </div>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-4">
      <img src="../public/assets/img/Krabby_Patty_transparentpng.png" alt="Burger">
    </div>
    <div class="col-4">
      <ul>
      {{#each burgers}}
      {{#if devoured}}
        <div class="row">
          {{this.burger_name}}
        </div>
      {{/if}}
      {{/each}}
      </ul>
    </div>
  </div>
</div>

<h2>Add a Burger</h2>

    <form action="/api/burgers" method="POST">
      <input type="text" id="name" name="burger_name">
      <button type="submit" class="addBurgerButton">Add Burger</button>
    </form>
